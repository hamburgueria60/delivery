<!DOCTYPE html>

<html lang="pt_BR" ng-app="app">
  <head>
    <% include ../includes/head.ejs %>
  </head>

  <style>
    #mainSideNav,
    #mainSideNav md-content {
      background-color: black !important;
    }
    #mainSideNav {
      display: flex;
      flex-flow: column nowrap;
    }
    #mainSideNav md-content {
      flex: 1;
    }
  </style>

  <body ng-cloak layout="row" ng-controller="LayoutController">
    <left-nav></left-nav>

    <div id="toolbar" flex layout="column">
      <md-toolbar
        id="mainToolbar"
        ng-hide="mPrintMode"
        layout="column"
        layout-align="center"
        class="toolbar"
      >
        <div layout="row">
          <div flex="33" hide-gt-sm>
            <md-button
              class="md-icon-button"
              aria-label="Settings"
              onclick="ga('send', 'event', 'views/pages/main.ejs', 'ng-click', 'toggleSideNav()');"
              ng-click="toggleSideNav()"
            >
              <md-icon>menu</md-icon>
            </md-button>
          </div>

          <div
            flex="33"
            layout="row"
            hide-gt-sm
            layout-align="center center"
          ></div>

          <div flex layout="row" layout-align="end center">
            <% include ../partials/toolbar.ejs %>
          </div>
        </div>
      </md-toolbar>
      <div id="main-view" ui-view flex></div>
    </div>

    <% include ../includes/scripts.ejs %>
  </body>
</html>

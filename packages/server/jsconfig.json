{
  "extends": "../tsconfig.json",
  "include": ["src/**/*.js"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "module": "esnext",
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "lib": ["es2017", "dom"]
  }
}
